<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading">
    <%= link_to new_product_path, class: 'btn btn-success btn-sm' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Add Product
    <% end %>
  </div>
  <div class="panel-body">
  
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= product.description %></td>
            <td><%= link_to 'Show', product, class: "btn btn-info btn-sm" %></td>
            <td>
              <%= link_to edit_product_path(product), class: "btn btn-warning btn-sm" do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
              <% end %>
            </td>
            <td>
              <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
              <span class="glyphicon glyphicon-remove"></span>
              Delete
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>

  </div>

</div>
