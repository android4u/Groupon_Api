<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading">
    <h1class="panel-title">Product Listings</h1>
  </div>
  
  <div class="panel-body">
  
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= link_to 'Show', product, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', product, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
  
      <%= link_to 'New Product', new_product_path, class: "btn btn-success" %>

  </div>

</div>
